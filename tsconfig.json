{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "es2015",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "typeRoots": ["node_modules/@types"],
        "jsx": "react",
        "esModuleInterop": true,
        "noUnusedLocals": true
    },
    "include": ["src"],
    "exclude": ["src/**/*.test.*"]
}
